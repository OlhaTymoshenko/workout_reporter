<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="SpinnerFont" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextViewFont" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorSecondaryText</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="RadioButtonFont" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Wr.TextAppearance.Medium" parent="TextAppearance.AppCompat.Medium"/>

    <style name="DrawerTitleFont" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/colorSecondaryText</item>
    </style>

    <style name="DrawerFont" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/colorPrimaryText</item>
    </style>

    <style name="SpinnerGalleryFont" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textSize">18sp</item>
    </style>
    
    <style name="SpinnerStyle">
        <item name="android:popupBackground">@color/colorPrimary</item>
    </style>
    
    <style name="CardFont" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>
